<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <menu id="menu">
    <item>
      <attribute name="label" translatable="yes">About Kairos</attribute>
      <attribute name="action">win.action_about</attribute>
    </item>
  </menu>
</interface>
<interface>
  <requires lib="gtk" version="4.0"/>
  <template class="KairosMainWindow" parent="HeApplicationWindow">
    <property name="title"></property>
    <child>
      <object class="GtkBox">
        <child>
          <object class="GtkBox" id="main_box">
            <property name="orientation">vertical</property>
            <property name="hexpand">1</property>
            <child>
              <object class="HeAppBar">
                <property name="flat">1</property>
                <property name="show-buttons" bind-source="search_button" bind-property="active" bind-flags="invert-boolean"/>
                <property name="show-back">0</property>
                <child>
                  <object class="GtkMenuButton" id="menu_button">
                    <property name="icon-name">open-menu-symbolic</property>
                    <property name="menu-model">menu</property>
                  </object>
                </child>
                <child>
                  <object class="GtkButton" id="refresh_button">
                    <property name="icon-name">view-refresh-symbolic</property>
                  </object>
                </child>
                <child>
                  <object class="GtkToggleButton" id="search_button">
                    <property name="icon-name">edit-find-symbolic</property>
                  </object>
                </child>
              </object>
            </child>
            <child>
              <object class="GtkWindowHandle">
                <child>
                  <object class="GtkStack" id="stack">
                    <property name="margin-top">18</property>
                    <property name="margin-bottom">18</property>
                    <property name="margin-start">18</property>
                    <property name="margin-end">18</property>
                    <property name="transition_type">crossfade</property>
                    <property name="vhomogeneous">true</property>
                    <property name="vexpand">true</property>
                    <child>
                      <object class="GtkStackPage">
                        <property name="name">load</property>
                        <property name="child">
                          <object class="GtkSpinner" id="load_page">
                            <property name="spinning">true</property>
                            <property name="halign">center</property>
                            <property name="valign">center</property>
                            <property name="vexpand">true</property>
                          </object>
                        </property>
                      </object>
                    </child>
                    <child>
                      <object class="GtkStackPage">
                        <property name="name">alert</property>
                        <property name="child">
                          <object class="HeEmptyPage" id="alert_label">
                            <property name="title">Unable To Get Weather Info</property>
                            <property name="description">Refresh location to see weather info.</property>
                            <property name="icon">location-services-disabled-symbolic</property>
                            <property name="button">Refresh Location</property>
                          </object>
                        </property>
                      </object>
                    </child>
                    <child>
                      <object class="GtkStackPage">
                        <property name="name">weather</property>
                        <property name="child">
                          <object class="GtkBox" id="weather_page">
                            <property name="vexpand">true</property>
                            <property name="hexpand">true</property>
                            <property name="spacing">18</property>
                            <property name="orientation">vertical</property>
                            <child>
                              <object class="GtkImage" id="weather_icon">
                                <property name="pixel-size">128</property>
                              </object>
                            </child>
                            <child>
                              <object class="GtkLabel" id="temp_label">
                                <property name="halign">center</property>
                                <property name="label">—°C</property>
                                <style>
                                  <class name="temp-display"/>
                                </style>
                              </object>
                            </child>
                            <child>
                              <object class="GtkBox">
                                <property name="orientation">vertical</property>
                                <property name="hexpand">true</property>
                                <property name="spacing">6</property>
                                <child>
                                  <object class="GtkLabel" id="weather_label">
                                    <property name="halign">center</property>
                                    <property name="hexpand">true</property>
                                    <property name="label">————</property>
                                    <style>
                                      <class name="cb-title"/>
                                    </style>
                                  </object>
                                </child>
                                <child>
                                  <object class="GtkLabel" id="location_label">
                                    <property name="halign">center</property>
                                    <property name="label">—————</property>
                                    <style>
                                      <class name="cb-subtitle"/>
                                    </style>
                                  </object>
                                </child>
                                <child>
                                  <object class="GtkBox">
                                    <property name="orientation">vertical</property>
                                    <property name="spacing">6</property>
                                    <property name="margin-top">12</property>
                                    <child>
                                      <object class="HeMiniContentBlock" id="wind_block">
                                        <property name="icon">weather-windy-symbolic</property>
                                        <binding name="title">
                                          <closure type="gchararray" function="get_wind_label">
                                            <lookup name="wind" type="KairosMainWindow"/>
                                          </closure>
                                        </binding>
                                      </object>
                                    </child>
                                    <child>
                                      <object class="HeMiniContentBlock" id="dew_block">
                                        <property name="icon">emoji-nature-symbolic</property>
                                        <binding name="title">
                                          <closure type="gchararray" function="get_dew_label">
                                            <lookup name="dew" type="KairosMainWindow"/>
                                          </closure>
                                        </binding>
                                      </object>
                                    </child>
                                    <child>
                                      <object class="HeMiniContentBlock" id="temp_block">
                                        <property name="icon">system-switch-user-symbolic</property>
                                        <binding name="title">
                                          <closure type="gchararray" function="get_temphilo_label">
                                            <lookup name="temphilo" type="KairosMainWindow"/>
                                          </closure>
                                        </binding>
                                      </object>
                                    </child>
                                  </object>
                                </child>
                                <child>
                                  <object class="GtkLabel" id="kudos_label">
                                    <property name="halign">center</property>
                                    <property name="use-markup">1</property>
                                    <property name="margin-top">6</property>
                                    <style>
                                      <class name="caption"/>
                                    </style>
                                  </object>
                                </child>
                              </object>
                            </child>
                          </object>
                        </property>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
        <child>
          <object class="GtkSeparator">
            <property name="orientation">vertical</property>
            <property name="visible" bind-source="search_button" bind-property="active" bind-flags="sync-create"/>
          </object>
        </child>
        <child>
          <object class="GtkBox" id="side_box">
            <property name="orientation">vertical</property>
            <property name="visible" bind-source="search_button" bind-property="active" bind-flags="sync-create"/>
            <child>
              <object class="HeAppBar">
                <property name="flat">1</property>
                <property name="show-buttons">1</property>
                <property name="show-back">0</property>
              </object>
            </child>
            <child>
              <object class="GtkBox">
                <property name="orientation">vertical</property>
                <child>
                  <object class="GtkSearchEntry" id="search_entry">
                    <property name="placeholder-text" translatable="yes">Search for a location…</property>
                    <property name="margin-start">18</property>
                    <property name="margin-end">18</property>
                    <property name="margin-bottom">12</property>
                    <property name="halign">start</property>
                    <style>
                      <class name="sblock"/>
                    </style>
                  </object>
                </child>
                <child>
                  <object class="GtkStack" id="search_stack">
                    <property name="margin-top">18</property>
                    <property name="margin-bottom">18</property>
                    <property name="margin-start">18</property>
                    <property name="margin-end">18</property>
                    <property name="transition_type">crossfade</property>
                    <property name="vhomogeneous">true</property>
                    <property name="vexpand">true</property>
                    <child>
                      <object class="GtkStackPage">
                        <property name="name">empty</property>
                        <property name="child">
                          <object class="HeEmptyPage" id="search_label">
                            <property name="title">No Location Searched</property>
                            <property name="description">Search for a location.</property>
                            <property name="icon">location-services-disabled-symbolic</property>
                          </object>
                        </property>
                      </object>
                    </child>
                    <child>
                      <object class="GtkStackPage">
                        <property name="name">results</property>
                        <property name="child">
                          <object class="GtkListBox" id="listbox">
                            <property name="valign">start</property>
                            <property name="selection_mode">none</property>
                            <signal name="row-activated" handler="item_activated" swapped="no"/>
                            <style>
                              <class name="content-list"/>
                            </style>
                          </object>
                        </property>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>
